@model List<UsuarioModel>
@{
    ViewData["Title"] = "Cadastrando admin";
}


<div class="text-center">


    <h1 class="display-4">Meu cadastro</h1>

    <br />


    <table class="table table-striped table-bordered text-center" id="table-usuario">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Senha</th>
                <th scope="col">DataNascimento</th>
                <th scope="col">Sexo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Senha</td>
                        <td>@usuario.DataNascimento</td>
                        <td>@usuario.Sexo</td>

                     

                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@usuario.Id" asp-controller="Cadastro" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-secondary" asp-route-id="@usuario.Id" asp-controller="Cadastro" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>

</div>

